<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/card_bg"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageTv"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginEnd="10dp"
            android:background="@color/gray"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_image_24"
            style="@style/ImageStyle_Corners_Rounded"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleTv"
            android:fontFamily="@font/poppins_extrabold"
            android:textColor="@color/text_colour"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/imageTv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="The Ad Title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/categoryTv"
            android:fontFamily="@font/poppins_extrabold"
            android:textColor="@color/secondary_colour"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginTop="5dp"
            android:textSize="10sp"
            android:layout_toEndOf="@id/imageTv"
            android:layout_below="@id/titleTv"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="CATEGORY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:id="@+id/isSoldTv"
            android:textColor="@color/text_colour"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/titleTv"
            android:text="NOT SOLD"
            android:layout_marginEnd="10dp"
            android:textSize="10sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:id="@+id/descriptionTv"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:layout_toEndOf="@id/imageTv"
            android:layout_below="@id/categoryTv"
            android:ellipsize="end"
            android:textColor="@color/text_colour"
            android:lines="3"
            android:text="The long description of the Ad that can be of multiple lines but will show here in 3 lines"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:id="@+id/priceTv"
            android:textColor="@color/secondary_colour"
            android:layout_toEndOf="@id/imageTv"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/poppins_extrabold"
            android:textSize="12sp"
            android:text="â‚¹ XYZ"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:id="@+id/dateTv"
            android:textColor="@color/text_colour"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="JUN 24 2024"
            android:layout_margin="10dp"
            android:textSize="12sp"/>







    </RelativeLayout>
</androidx.cardview.widget.CardView>